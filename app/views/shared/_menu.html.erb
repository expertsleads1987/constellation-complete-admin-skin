<ul id="menu">
  <li><%= link_to "Accueil", root_path %></li>
  <li><%= link_to "Comptes", management_index_path %></li>
  <li><%= link_to "Configuration", configuration_path %></li>
  <li style="margin-left:500px">
    <%= link_to(image_tag("logout.png"),
                 user_session_path(@current_user), 
                 :method => :delete, 
                 :id => "delete")
    %>
  </li>
</ul>

<script id="scriptInit" type="text/javascript">
  $(document).ready(function () {
    $("#menu").wijmenu();
  });
  <% (position + 1).times do %>
    $(document).ready(function($) {
      $("#menu").focus().wijmenu("next");
    });
  <% end %>
</script>

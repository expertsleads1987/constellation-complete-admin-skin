<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Onopia.com" %></title>
    
    <!-- javascripts -->
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "wijmo" %>
    
    <% if ENV["RAILS_ENV"] == "test" %>
        <%= javascript_include_tag('test') %>
    <% end %>
    <%= javascript_include_tag "main" %>
    <%= yield :javascript_library %>
    
    <!-- stylesheets -->
    <%= stylesheet_link_tag "datatables" %>
    <% if @current_user && @current_user.theme %>
      <%= stylesheet_link_tag @current_user.theme.url %>
    <% else %>
      <%= stylesheet_link_tag "http://cdn.wijmo.com/themes/rocket/jquery-wijmo.css" %>
    <% end %>
    <%= stylesheet_link_tag "wijmo" %>
    <%= stylesheet_link_tag "main" %>
    <%= yield :stylesheet_library %>
    
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="application_container">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
    <%= render :partial => '/shared/javascript'%>
  </body>
</html>

